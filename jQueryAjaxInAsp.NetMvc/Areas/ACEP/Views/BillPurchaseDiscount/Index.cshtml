@model IEnumerable<jQueryAjaxInAsp.NetMvc.Areas.ACEP.ViewModels.VM_TBL_ACEP_BILL_PURCHASE_DISCOUNT>

@{ ViewBag.Title = "Bill Purchase And Discount";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h3>
    <a href="@Url.Action("Create","BillPurchaseDiscount",new { area = "acep"})" class="btn btn-info btn-sm">
        <span class="glyphicon glyphicon-plus">ADD New BPD Amount</span>
    </a>
</h3>

<div class="row col-sm-8">
    <div class="panel panel-info">

        <div class="panel-heading">
            <h3 class="panel-title"> @ViewBag.Title </h3>
        </div>

        <div class="panel-body">

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.OFFICE_NAME)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PERIOD)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BPD_AMOUNT)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OFFICE_NAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PERIOD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BPD_AMOUNT)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "BillPurchaseDiscount", new { id = item.BPD_GUID })" class="btn btn-primary btn-sm">
                        <span class="glyphicon glyphicon-edit">Edit</span>
                    </a>
                    <a href="@Url.Action("Details", "BillPurchaseDiscount", new { id = item.BPD_GUID })" class="btn btn-success btn-sm">
                        <span class="glyphicon glyphicon-eye-open">Details</span>
                    </a>
                    <a href="@Url.Action("Delete", "BillPurchaseDiscount", new { id = item.BPD_GUID })" class="btn btn-danger btn-sm">
                        <span class="glyphicon glyphicon-trash">Delete</span>
                    </a>
                </td>
            </tr>
}

            </table>
        </div>
    </div>
</div>