        </div>

        <div class="panel-body">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ES_SUB_CATEGORY_NAME)</th>
                        <td>@Html.DisplayFor(model => model.ES_SUB_CATEGORY_NAME)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ES_CATEGORY_NAME)</th>
                        <td>@Html.DisplayFor(model => model.ES_CATEGORY_NAME)</td>
                    </tr>
                </tbody>
            </table>

            @using (Html.BeginForm())
            {
@Html.AntiForgeryToken()

                <p>
                    <button type="submit" class="btn btn-danger btn-sm">
                        <span class="glyphicon glyphicon-trash">Delete</span>
                    </button>
                </p>}
        </div>
    </div>
</div>


